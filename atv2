import java.util.Scanner;

class Quarto {
    int leitos, ndias;
    double preco, despesas;
    String situacao; // "L"=livre, "A"=alugado, "R"=reservado
    String nomeHospede, telefone, dataEntrada, dataSaida;

    Quarto(int leitos, double preco) {
        this.leitos = leitos;
        this.preco = preco;
        situacao = "L";
        ndias = 0;
        despesas = 0;
        nomeHospede = "";
        telefone = "";
        dataEntrada = "XXXX";
        dataSaida = "XXXX";
    }
}

public class Tarefa400 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Quarto[] quartos = new Quarto[50];
        boolean cadastrou = false;
        int op;

        do {
            System.out.println("\nHotel Fazenda Sucesso");
            System.out.println("1 - Cadastra quartos");
            System.out.println("2 - Lista todos os quartos");
            System.out.println("3 - Lista quartos ocupados");
            System.out.println("4 - Aluguel/reserva quarto");
            System.out.println("5 - Entrar despesas extras");
            System.out.println("6 - Calcula despesa do quarto");
            System.out.println("7 - Sai");
            System.out.print("Opção: ");
            op = sc.nextInt(); sc.nextLine();

            switch(op){
                case 1:
                    if(cadastrou){
                        System.out.println("Atenção: Dados já cadastrados");
                        break;
                    }
                    for(int i=0;i<50;i++){
                        System.out.print("Leitos do quarto " + (i+1) + ": ");
                        int leitos = sc.nextInt();
                        System.out.print("Preço do quarto: ");
                        double preco = sc.nextDouble(); sc.nextLine();
                        quartos[i] = new Quarto(leitos, preco);
                    }
                    cadastrou = true;
                    break;

                case 2:
                    if(!cadastrou){ System.out.println("Escolha a opção 1 primeiro"); break; }
                    for(int i=0;i<50;i++){
                        Quarto q = quartos[i];
                        System.out.println("\nQuarto " + (i+1));
                        System.out.println("Situação: " + q.situacao);
                        if(q.situacao.equals("A") || q.situacao.equals("R")){
                            System.out.println("Nome: " + q.nomeHospede);
                            System.out.println("Telefone: " + q.telefone);
                        }
                        System.out.println("Leitos: " + q.leitos);
                        System.out.println("Preço: " + q.preco);
                        System.out.println("Despesas: " + q.despesas);
                        System.out.println("Entrada: " + q.dataEntrada);
                        System.out.println("Saída: " + q.dataSaida);
                        System.out.println("Número de dias: " + q.ndias);
                        System.out.println("Pressione enter para continuar...");
                        sc.nextLine();
                    }
                    break;

                case 3:
                    if(!cadastrou){ System.out.println("Escolha a opção 1 primeiro"); break; }
                    for(int i=0;i<50;i++){
                        Quarto q = quartos[i];
                        if(!q.situacao.equals("L")){
                            System.out.println("\nQuarto " + (i+1));
                            System.out.println("Situação: " + q.situacao);
                            System.out.println("Despesas: " + q.despesas);
                            System.out.println("Entrada: " + q.dataEntrada);
                            System.out.println("Saída: " + q.dataSaida);
                            System.out.println("Número de dias: " + q.ndias);
                            System.out.println("Pressione enter para continuar...");
                            sc.nextLine();
                        }
                    }
                    break;

                case 4:
                    if(!cadastrou){ System.out.println("Escolha a opção 1 primeiro"); break; }
                    System.out.print("Aluguel(A) ou Reserva(R)? ");
                    String tipo = sc.nextLine().toUpperCase();
                    while(!tipo.equals("A") && !tipo.equals("R")){
                        System.out.print("Resposta inválida. Digite A ou R: ");
                        tipo = sc.nextLine().toUpperCase();
                    }
                    System.out.print("Número do quarto (1-50): ");
                    int n = sc.nextInt(); sc.nextLine();
                    while(n<1 || n>50){ System.out.print("Quarto inválido. Digite novamente: "); n=sc.nextInt(); sc.nextLine(); }
                    Quarto q = quartos[n-1];
                    if(q.situacao.equals("A")) System.out.println("Quarto ocupado!");
                    else{
                        q.situacao = tipo;
                        System.out.print("Nome: "); q.nomeHospede=sc.nextLine();
                        System.out.print("Telefone: "); q.telefone=sc.nextLine();
                        System.out.print("Data entrada: "); q.dataEntrada=sc.nextLine();
                        System.out.print("Data saída: "); q.dataSaida=sc.nextLine();
                        System.out.print("Número de dias: "); q.ndias=sc.nextInt(); sc.nextLine();
                        if(tipo.equals("A")) q.despesas=0;
                    }
                    break;

                case 5:
                    if(!cadastrou){ System.out.println("Escolha a opção 1 primeiro"); break; }
                    System.out.print("Número do quarto (1-50): "); int qd = sc.nextInt(); sc.nextLine();
                    while(qd<1||qd>50){ System.out.print("Quarto inválido. Digite novamente: "); qd=sc.nextInt(); sc.nextLine(); }
                    System.out.print("Valor da despesa: "); double val = sc.nextDouble(); sc.nextLine();
                    quartos[qd-1].despesas += val;
                    break;

                case 6:
                    if(!cadastrou){ System.out.println("Escolha a opção 1 primeiro"); break; }
                    System.out.print("Número do quarto (1-50): "); int qa = sc.nextInt(); sc.nextLine();
                    while(qa<1||qa>50){ System.out.print("Quarto inválido. Digite novamente: "); qa=sc.nextInt(); sc.nextLine(); }
                    Quarto qaObj = quartos[qa-1];
                    double total = qaObj.preco + qaObj.despesas;
                    System.out.println("Valor total a pagar: R$ " + total);
                    // Resetar quarto
                    qaObj.situacao="L"; qaObj.despesas=0; qaObj.ndias=0; qaObj.dataEntrada="XXXX"; qaObj.dataSaida="XXXX"; qaObj.nomeHospede=""; qaObj.telefone="";
                    break;

                case 7: System.out.println("Saindo..."); break;
                default: System.out.println("Opção inválida!");
            }

        }while(op!=7);

        sc.close();
    }
}


