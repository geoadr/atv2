import java.util.*;

public class Tarefa346 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int op;
        do {
            System.out.println("\nMENU\n1 - Comprimento da frase\n2 - Dois primeiros e dois últimos\n3 - Frase espelhada\n4 - Sair");
            System.out.print("OPCAO: ");
            op = sc.nextInt(); sc.nextLine();
            
            if (op == 1) {
                System.out.print("Digite a frase: ");
                String f = sc.nextLine();
                System.out.println("Tamanho: " + f.length());
            } 
            else if (op == 2) {
                System.out.print("Digite a frase: ");
                String f = sc.nextLine();
                if (f.length() >= 2) 
                    System.out.println("Primeiros: " + f.substring(0,2) + " | Últimos: " + f.substring(f.length()-2));
                else 
                    System.out.println("Frase muito curta!");
            } 
            else if (op == 3) {
                System.out.print("Digite a frase: ");
                System.out.println("Espelhada: " + new StringBuilder(sc.nextLine()).reverse());
            } 
            else if (op == 4) System.out.println("Fim do algoritmo");
            else System.out.println("Opção inválida");
        } while (op != 4);
        sc.close();
    }
}

