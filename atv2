import java.util.Scanner;

public class MatrizDiferenca {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int[][] A = new int[5][5];
        int[][] B = new int[5][5];
        int[][] DIF = new int[5][5];

        // Leitura da matriz A
        System.out.println("Digite os elementos da matriz A:");
        for (int i = 0; i < 5; i++) {
            for (int j = 0; j < 5; j++) {
                System.out.print("A[" + i + "][" + j + "]: ");
                A[i][j] = sc.nextInt();
            }
        }

        // Leitura da matriz B e cálculo da diferença
        System.out.println("Digite os elementos da matriz B:");
        for (int i = 0; i < 5; i++) {
            for (int j = 0; j < 5; j++) {
                System.out.print("B[" + i + "][" + j + "]: ");
                B[i][j] = sc.nextInt();
                DIF[i][j] = A[i][j] - B[i][j];
            }
        }

        // Impressão da matriz diferença
        System.out.println("\nMATRIZ DIFERENÇA:");
        for (int i = 0; i < 5; i++) {
            for (int j = 0; j < 5; j++) {
                System.out.print(DIF[i][j] + "\t");
            }
            System.out.println();
        }

        sc.close();
    }
}

