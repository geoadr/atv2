import java.util.Scanner;

public class Algoritimo354 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int[] num = new int[15];

        // Entrada dos 15 números
        for (int i = 0; i < 15; i++) {
            System.out.print("Digite o " + (i + 1) + "º número: ");
            num[i] = scanner.nextInt();
        }

        // Saída formatada
        System.out.println("\nRELAÇÃO DOS NÚMEROS");
        for (int i = 0; i < 15; i++) {
            System.out.print((i + 1) + " - " + num[i]);
            if (num[i] % 2 == 0) {
                System.out.println(" é PAR");
            } else {
                System.out.println(" é ÍMPAR");
            }
        }

        scanner.close();
    }
}


356/
import java.util.Scanner;

public class VetorNotasAlunos {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Arrays
        String[] nomes = new String[15];
        String[] situacoes = new String[15];
        double[] pr1 = new double[15];
        double[] pr2 = new double[15];
        int[] medias = new int[15];

        // Entrada de dados
        for (int i = 0; i < 15; i++) {
            // Nome com no máximo 30 caracteres
            while (true) {
                System.out.print("\nDigite o nome do " + (i + 1) + "º aluno: ");
                nomes[i] = scanner.nextLine();

                if (nomes[i].length() <= 30) {
                    break;
                } else {
                    System.out.println("Nome com no máximo 30 caracteres.");
                }
            }

            // Preencher com espaços para tabulação uniforme
            nomes[i] = String.format("%-30s", nomes[i]);

            // Notas
            System.out.print("Digite a PR1: ");
            pr1[i] = scanner.nextDouble();

            System.out.print("Digite a PR2: ");
            pr2[i] = scanner.nextDouble();

            // Limpa o buffer
            scanner.nextLine();

            // Média arredondada
            double mediaReal = (pr1[i] + pr2[i]) / 2 + 0.0001;
            medias[i] = (int) mediaReal;

  
            if (medias[i] >= 5) {
                situacoes[i] = "AP";
            } else {
                situacoes[i] = "RP";
            }
        }

        // Saída formatada
        System.out.println("\n\n\t\t\tRELATÓRIO FINAL");
        System.out.println("---------------------------------------------------------------");
        System.out.printf("%-3s %-30s %-7s %-7s %-7s %-5s\n", "#", "Nome", "PR1", "PR2", "Média", "Sit");
        System.out.println("---------------------------------------------------------------");

        for (int i = 0; i < 15; i++) {
            System.out.printf("%-3d %-30s %-7.2f %-7.2f %-7d %-5s\n",
                    (i + 1), nomes[i], pr1[i], pr2[i], medias[i], situacoes[i]);
        }

        scanner.close();
    }
}


