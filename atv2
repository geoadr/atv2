import java.util.Scanner;

class Aluno {
    String nome;
    double nota1, nota2;
    double media;
}

public class EscolaViva {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Aluno[] alunos = new Aluno[50];
        for (int i = 0; i < 50; i++) alunos[i] = new Aluno();

        boolean nomesCadastrados = false, notas1Cadastradas = false, notas2Cadastradas = false;
        String opcao;

        do {
            System.out.println("\nMENU\n1-Nomes 2-Nota1 3-Nota2 4-Média 5-Listar 6-Sair");
            System.out.print("Opção: ");
            opcao = sc.nextLine();

            switch (opcao) {
                case "1":
                    for (int i = 0; i < 50; i++) {
                        String nome;
                        do {
                            System.out.print("Digite o " + (i + 1) + "º nome (até 30 caracteres): ");
                            nome = sc.nextLine().toUpperCase();
                        } while (nome.length() > 30);
                        while (nome.length() < 30) nome += " ";
                        alunos[i].nome = nome;
                    }
                    nomesCadastrados = true;
                    break;

                case "2":
                    if (!nomesCadastrados) { System.out.println("Nomes não cadastrados!"); break; }
                    for (int i = 0; i < 50; i++) {
                        System.out.print("Digite a 1ª nota do " + (i + 1) + "º aluno: ");
                        alunos[i].nota1 = sc.nextDouble();
                    }
                    sc.nextLine();
                    notas1Cadastradas = true;
                    break;

                case "3":
                    if (!nomesCadastrados) { System.out.println("Nomes não cadastrados!"); break; }
                    for (int i = 0; i < 50; i++) {
                        System.out.print("Digite a 2ª nota do " + (i + 1) + "º aluno: ");
                        alunos[i].nota2 = sc.nextDouble();
                    }
                    sc.nextLine();
                    notas2Cadastradas = true;
                    break;

                case "4":
                    if (!nomesCadastrados || !notas1Cadastradas || !notas2Cadastradas) {
                        System.out.println("Nem todos os dados estão cadastrados!");
                    } else {
                        for (Aluno a : alunos) a.media = (a.nota1 * 3 + a.nota2 * 7) / 10;
                        System.out.println("Médias calculadas!");
                    }
                    break;

                case "5":
                    if (!nomesCadastrados || !notas1Cadastradas || !notas2Cadastradas) {
                        System.out.println("Nem todos os dados estão cadastrados!");
                    } else {
                        System.out.println("\nNOME                           NOTA1   NOTA2   MÉDIA");
                        for (Aluno a : alunos)
                            System.out.printf("%-30s %.2f   %.2f   %.2f\n", a.nome, a.nota1, a.nota2, a.media);
                    }
                    break;

                case "6": System.out.println("Saindo..."); break;
                default: System.out.println("Opção inválida!");
            }
        } while (!opcao.equals("6"));

        sc.close();
    }
}


398/ 

import java.util.*;

class Produto {
    int codigo, quantidade;
    double preco;
    Produto(int c, int q, double p) { codigo=c; quantidade=q; preco=p; }
}

public class FábricaQueijo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        List<Produto> produtos = new ArrayList<>();
        double totalVendas = 0;

        // --- Cadastro de produtos ---
        while (produtos.size() < 50) {
            System.out.print("Código do produto (-1 p/ terminar): ");
            int c = sc.nextInt();
            if (c == -1) break;
            System.out.print("Quantidade: "); int q = sc.nextInt();
            System.out.print("Preço: "); double p = sc.nextDouble();
            produtos.add(new Produto(c, q, p));
        }

        // --- Vendas ---
        while (true) {
            System.out.print("\nCódigo do produto a vender (0 p/ sair): ");
            int c = sc.nextInt();
            if (c == 0) break;
            System.out.print("Quantidade a vender: "); int q = sc.nextInt();

            Produto prod = null;
            for (Produto p : produtos) if (p.codigo == c) { prod = p; break; }

            if (prod == null) System.out.println("Produto Não-Cadastrado!");
            else if (prod.quantidade < q) System.out.println("Estoque Insuficiente!");
            else {
                prod.quantidade -= q;
                double venda = q * prod.preco;
                totalVendas += venda;
                System.out.printf("Venda realizada: R$ %.2f\n", venda);
            }
        }

        // --- Listagem final ---
        produtos.sort((a,b) -> b.quantidade - a.quantidade);
        System.out.printf("\nTotal vendido no dia: R$ %.2f\n", totalVendas);
        System.out.println("Código\tQuantidade\tPreço");
        for (Produto p : produtos) System.out.printf("%d\t%d\t\t%.2f\n", p.codigo, p.quantidade, p.preco);

        sc.close();
    }
}

