import java.util.Scanner;

public class Tarefa413 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int[][] matriz = new int[5][5];
        int soma = 0;

        // Leitura da matriz
        for(int l=0; l<5; l++){
            for(int c=0; c<5; c++){
                System.out.print("Digite o elemento [" + l + "," + c + "]: ");
                matriz[l][c] = sc.nextInt();
            }
        }

        // Imprimir matriz
        System.out.println("\nToda a matriz:");
        for(int l=0; l<5; l++){
            for(int c=0; c<5; c++){
                System.out.print(matriz[l][c] + "\t");
            }
            System.out.println();
        }

        // Soma dos quadrados dos números ímpares abaixo da diagonal secundária
        for(int l=0; l<5; l++){
            for(int c=0; c<5; c++){
                if(c + l > 4 && matriz[l][c] % 2 != 0){ // abaixo da DS e ímpar
                    soma += matriz[l][c] * matriz[l][c];
                }
            }
        }

        System.out.println("\nRaiz quadrada da soma dos quadrados dos números ímpares abaixo da diagonal secundária: " + Math.sqrt(soma));
        sc.close();
    }
}


