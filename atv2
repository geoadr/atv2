import java.util.*;

public class Horoscopo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int[] ult = {20,19,20,20,21,20,22,22,22,22,21,21};
        String[] sig = {"Capricórnio","Aquário","Peixes","Áries","Touro","Gêmeos",
                        "Câncer","Leão","Virgem","Libra","Escorpião","Sagitário"};

        while (true) {
            System.out.print("Digite a data (ddmm) ou 9999 para sair: ");
            int data = sc.nextInt();
            if (data == 9999) break;
            int d = data/100, m = data%100;
            if (m<1||m>12||d<1||d>31) System.out.println("Data inválida!");
            else System.out.println("Signo: " + (d>ult[m-1] ? sig[m%12] : sig[m-1]));
        }
    }
}


362/
import java.util.*;

public class Conjuntos {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int[] v1 = new int[10];
        int[] v2 = new int[20];
        
        System.out.println("Digite 10 números para o vetor 1:");
        for (int i = 0; i < 10; i++) v1[i] = sc.nextInt();

        System.out.println("Digite 20 números para o vetor 2:");
        for (int i = 0; i < 20; i++) v2[i] = sc.nextInt();

        // Usando Set para evitar repetição na saída
        Set<Integer> comuns = new HashSet<>();
        for (int x : v1) {
            for (int y : v2) {
                if (x == y) comuns.add(x);
            }
        }

        if (comuns.isEmpty()) {
            System.out.println("\nNão existem elementos comuns.");
        } else {
            System.out.println("\nElementos comuns:");
            for (int n : comuns) System.out.print(n + " ");
            System.out.println();
        }
    }
}


370/
import java.util.*;

public class Reservas {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Map<Integer, Integer> voos = new HashMap<>();

        System.out.print("Quantos voos deseja cadastrar? ");
        int n = sc.nextInt();

        for (int i = 0; i < n; i++) {
            System.out.print("Número do voo: ");
            int num = sc.nextInt();
            System.out.print("Lugares disponíveis: ");
            int lugares = sc.nextInt();
            voos.put(num, lugares);
        }

        while (true) {
            System.out.print("\nDigite o número do voo desejado (0 para sair): ");
            int escolha = sc.nextInt();
            if (escolha == 0) break;

            if (!voos.containsKey(escolha)) {
                System.out.println("Não existe esse voo!");
            } else if (voos.get(escolha) > 0) {
                System.out.print("Digite o número da identidade do cliente: ");
                String id = sc.next();
                voos.put(escolha, voos.get(escolha) - 1);
                System.out.println("Reserva confirmada para identidade " + id +
                                   " no voo " + escolha);
            } else {
                System.out.println("Não existem mais lugares neste voo.");
            }
        }
        System.out.println("Fim do programa.");
        sc.close();
    }
}


